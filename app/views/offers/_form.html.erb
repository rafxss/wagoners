
<%= simple_form_for(@offer) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :branch_office %>
    <%= f.input :description %>
    <%= f.input :voucher %>
    <%= f.input :level, collection: [['bronze', 'bronze'], ['silver', 'silver'], ['gold', 'gold']] %>
    <%= f.input :category, collection: OFFER_CATEGORIES, required: true, include_blank: "Offer's Category", label: false  %>
    <%= f.input :due_date %>
    <%= f.input :url%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
