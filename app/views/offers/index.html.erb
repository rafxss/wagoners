
<div class= container >


   <% @offers.each do |offer| %>


  <div class="card-trip m-2 rounded">

        <% if offer.level == "bronce" %>
           <img src="<%= offer.url %>" style="border-bottom-color: #B88B5E" />
        <% elsif offer.level == "silver" %>
           <img src="<%= offer.url %>" style="border-bottom-color: #A3A7A7" />
        <% else  %>
            <img src="<%= offer.url %>" style="border-bottom-color: #EDCF80" />

        <% end %>




    <div class="card-trip-infos">
      <div>
        <div class="d-flex row justify-content-between">
          <div>
            <h2><%= offer.branch_office.partner.name.capitalize %></h2>
            <p style="color:#ACCACA"><%= offer.voucher.to_i %>% de descuento.</p>
          </div>
          <div>
            <p class="card-trip-pricing"> <%= offer.due_date %></p>
          </div>
        </div>
        <div>
          <% offer_lat = offer.branch_office.latitude %>
          <% offer_lon = offer.branch_office.longitude %>
          <% user_lat = current_user.latitude %>
          <% user_lon = current_user.longitude %>
          <% distance = Geocoder::Calculations.distance_between([offer_lat, offer_lon], [user_lat, user_lon], units: :km) %>
          <p><%= distance.round(1) %> km</p>
        </div>

      </div>
      <div>
        <% if offer.level == "bronce" %>
            <div class="offer-cat" style="background-color: #B88B5E">
              <i class="<%= OFFER_ICONS[offer.category.downcase.to_sym] %>"></i>
            </div>
        <% elsif offer.level == "silver" %>
            <div class="offer-cat" style="background-color:  #A3A7A7">
              <i class="<%= OFFER_ICONS[offer.category.downcase.to_sym] %>"></i>
            </div>
        <% else  %>
            <div class="offer-cat" style="background-color:  #EDCF80">
              <i class="<%= OFFER_ICONS[offer.category.downcase.to_sym] %>"></i>
            </div>

        <% end %>

      </div>

    </div>
  </div>

  <% end %>
</div>



<%= link_to 'New Offer', new_offer_path %>

