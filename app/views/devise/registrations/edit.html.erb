<div class="container">
  <br>

  <h1 class="text-center">Edita tu perfil</h1>
  <br>
  <div data-controller="autocomplete">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="form-inputs">
      <div class="form-row">
            <div class="col text-left">
              <%= f.input :first_name,
                          required: true,
                          label: false,
                          placeholder: 'Nombre*',
                          input_html: { class: 'form-input-wagoners' } %>
            </div>
            <div class="col text-left">
              <%= f.input :last_name,
                          label: false,
                          input_html: { class: 'form-input-wagoners' } %>
      </div>
    </div>
      <%= f.input :address, required: true, label: false, input_html: { class: 'form-input-wagoners', data: { target: 'autocomplete.input'} } %>
      <%#= f.input :date_of_birth, required: true, label: false, class: "form-control" %>
      <%= f.input :geolocation_access, label: false , label: 'Acepto que se comparta mi ubicación con BBVouchers',label_html: {class: "terms"} %>
      <br>

      <%= f.input :date_of_birth, required: true, label: "Fecha de nacimiento",
                    start_year: Date.today.year - 90, end_year: Date.today.year - 12,
                    order: [:day, :month, :year] %>

      <%= f.input :email, required: true, autofocus: true, label: false, input_html: { class: 'form-input-wagoners' } %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "Dejalo en blanco si no quieres cambiar de contraseña",
                  required: false,
                  placeholder: 'Nueva contraseña',
                  label: false,
                  input_html: { autocomplete: "new-password", class: 'form-input-wagoners' } %>
      <%= f.input :password_confirmation,
                  required: false,
                  placeholder: 'Repita la nueva contraseña',
                  label: false,
                  input_html: { autocomplete: "new-password", class: 'form-input-wagoners' } %>
      <%= f.input :current_password,
                  label: false,
                  placeholder: 'Contraseña actual',
                  hint: "Necesitamos tu contraseña actual para actualizar tus datos",
                  required: true,
                  input_html: { autocomplete: "current-password", class: 'form-input-wagoners' } %>
    </div>
    <br>

    <div class="form-actions">
      <div class="form-actions d-flex">
        <%= f.button :submit, "Actualizar", class: "btn-bbva-primary flex-grow-1 py-2" %>
      </div>
    </div>
  <% end %>
  <br>

  <div class="text-center mb-5">
    <%= link_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estas seguro?" }, method: :delete, class: 'terms' %>
  </div>
</div>


</div>
