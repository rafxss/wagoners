<div class="container">
  <br>
  <div class="row">
    <div class="col-12 col-md-8 text-center my-3">
      <h2><%= @user.first_name %> <%= @user.last_name %></h2>
      <% if @user.category == "bronze" %>
        <p style="color: #B88B5E">
          <%= @user.category.capitalize %>
        </p>
      <% elsif @user.category == "silver" %>
        <p style="color: #A3A7A7">
          <%= @user.category.capitalize %>
        </p>
      <% else  %>
        <p style="color: #EDCF80">
          <%= @user.category.capitalize %>
        </p>
      <% end %>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-12 col-md-8 mt-1 border-items">
        <div class="d-flex align-items-center my-3">
          <img class="d-block" src="https://res.cloudinary.com/djqgeagrs/image/upload/v1602942729/Group_48_ngsser.svg" style="height: 20px; width: 20px;">
          <h3 class="mt-2 ml-2">Mis Datos</h3>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-8 mt-2 border-items">
        <div class="d-flex align-items-center my-3">
          <img class="d-block" src="https://res.cloudinary.com/djqgeagrs/image/upload/v1602942729/Group_48_ngsser.svg" style="height: 20px; width: 20px;">
          <h3 class="mt-2 ml-2">Mis Gastos</h3>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-8 mt-2 border-items">
        <div class="d-flex align-items-center my-3">
          <img class="d-block" src="https://res.cloudinary.com/djqgeagrs/image/upload/v1602943005/Group_49_nqs4rm.svg" style="height: 20px; width: 20px;">
          <h3 class="mt-2 ml-2">Ahorro del mes</h3>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-8 mt-2 border-items">
        <div class="d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center my-3">
            <img class="d-block" src="https://res.cloudinary.com/djqgeagrs/image/upload/v1602943231/Group_51_aoojt3.svg" style="height: 20px; width: 20px;">
            <h3 class="mt-2 ml-2">Mis Puntos</h3>
          </div>
          <h5 class="my-4"> <%= @user.point %> puntos </h5>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-8 mt-2 border-items">
        <%= link_to user_offers_path(current_user), class: "text-decoration-none color-link-none" do %>
          <div class="d-flex align-items-center my-3">
            <img class="d-block" src="https://res.cloudinary.com/djqgeagrs/image/upload/v1602942729/Group_48_ngsser.svg" style="height: 20px; width: 20px;">
            <h3 class="mt-2 ml-2">Mis Ofertas</h3>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container mt-5 text-center">
    <div class="row my-3">
      <div class="col-12 col-md-8">
        <a href="/users/edit" class="btn btn-bbva-primary w-50">Editar perfil</a>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-8">
        <%= link_to "Cerrar sesiÃ³n", destroy_user_session_path, method: :delete, class: 'btn btn-bbva-secondary w-50'%>
      </div>
    </div>
  </div>
</div>


