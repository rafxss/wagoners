
<%= simple_form_for(@branch_office) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs" data-controller="autocomplete">
    <%= f.input :address, input_html: { data: { target: 'autocomplete.input'} } %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.association :partner %>
    <%= f.input :email %>
    <%= f.input :phone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
