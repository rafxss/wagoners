
<%= simple_form_for(@users_to_offer) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.association :offer %>
    <%= f.input :used %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
